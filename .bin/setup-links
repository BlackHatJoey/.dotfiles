#!/bin/bash

ln -fs "$HOME/.config/awesome/themes/blackout/wallpapers/wall.png" "$HOME/pictures/wall.png"
ln -fs "$HOME/.config/awesome/themes/blackout/wallpapers/lock.png" "$HOME/pictures/lock.png"

sudo cp -f "$HOME/.bin/lock" '/usr/local/bin/custom-lockscreen'
sudo cp -f "$HOME/.bin/update-pkglist" '/usr/local/bin/update-pkglist'
sudo cp -f "$HOME/.bin/aurremove" '/usr/local/bin/aurremove'
sudo cp -f "$HOME/.bin/aurupdate" '/usr/local/bin/aurupdate'
sudo cp -f "$HOME/.bin/edit-in-vim" '/usr/local/bin/edit-in-vim'
